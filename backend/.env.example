# Board Observer - Backend Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# DATABASE (required)
# ============================================

DATABASE_URL="postgresql://postgres:postgres@localhost:5432/board_observer"

# ============================================
# SERVER CONFIGURATION
# ============================================

PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ============================================
# RECALL.AI (required for meeting recording)
# ============================================

RECALL_API_KEY=your-recall-api-key
RECALL_API_URL=https://us-west-2.recall.ai/api/v1
RECALL_WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_BASE_URL=https://your-domain.com

# ============================================
# OPENAI (required for AI advisor)
# ============================================

OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
AGENT_MAX_TOKENS=200

# ============================================
# ELEVENLABS (optional - for natural TTS)
# ============================================

ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=nPczCjzI2devNBz1zQrb
ELEVENLABS_MODEL=eleven_flash_v2_5
TTS_PROVIDER=elevenlabs

# ============================================
# TRANSCRIPTION CONFIGURATION
# ============================================

TRANSCRIPTION_PROVIDER=assembly_ai_v3_streaming

# ============================================
# AGENT BEHAVIOR
# ============================================

AGENT_SPEAK_COOLDOWN=30
TRANSCRIPT_BUFFER_SECONDS=5
AI_MOCK_ENABLED=false
