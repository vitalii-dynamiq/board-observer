# Board Observer - Production Environment Variables
# Copy this file to .env.prod and fill in the values
# Usage: docker compose -f docker-compose.prod.yml --env-file .env.prod up -d

# ============================================
# DATABASE
# ============================================

DB_USER=postgres
DB_PASSWORD=your-secure-db-password
DB_NAME=board_observer

# ============================================
# REDIS
# ============================================

REDIS_PASSWORD=your-secure-redis-password

# ============================================
# FRONTEND
# ============================================

FRONTEND_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://api.your-domain.com

# ============================================
# RECALL.AI
# ============================================

RECALL_API_KEY=your-recall-api-key
RECALL_API_URL=https://us-west-2.recall.ai/api/v1
RECALL_WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_BASE_URL=https://api.your-domain.com

# ============================================
# OPENAI
# ============================================

OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# ============================================
# ELEVENLABS (optional)
# ============================================

ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=nPczCjzI2devNBz1zQrb
TTS_PROVIDER=elevenlabs

# ============================================
# TRANSCRIPTION
# ============================================

TRANSCRIPTION_PROVIDER=assembly_ai_v3_streaming

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=info
